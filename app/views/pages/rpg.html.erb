<!-- Game Container -->
<div class="game-container">
  <iframe
    id="rpg-frame"
    src="/rpg/cash/Ca$h_N/index.html"
    width="100%"
    height="100%"
    frameborder="0"
    allowfullscreen></iframe>
  <button id="send-message-button" class="send-message-button">
    Send message to game
  </button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const iframe = document.getElementById('rpg-frame');
    const button = document.getElementById('send-message-button');
    const origin = window.location.origin;
    const fallbackOrigin =
      origin.includes('127.0.0.1') ? origin.replace('127.0.0.1', 'localhost') : origin.replace('localhost', '127.0.0.1');
    const allowedOrigins = new Set([origin, fallbackOrigin]);
    let gameReady = false;

    const postToGame = (payload) => {
      if (!iframe || !iframe.contentWindow) {
        console.warn('[CashIn RPG] iframe not ready for messaging');
        return;
      }
      iframe.contentWindow.postMessage(payload, origin);
    };

    const sendHandshake = () => {
      postToGame({
        target: 'rpg-game',
        type: 'handshake',
        timestamp: Date.now(),
      });
    };

    if (iframe) {
      iframe.addEventListener('load', () => {
        console.log('[CashIn RPG] iframe load detected, sending handshake');
        sendHandshake();
      });
    }

    if (button) {
      button.addEventListener('click', () => {
        if (!gameReady) {
          console.warn('[CashIn RPG] Game not ready yet; attempting handshake.');
          sendHandshake();
        }
        postToGame({
          target: 'rpg-game',
          type: 'ui-event',
          message: 'Hello from the Cash In UI!',
          timestamp: Date.now(),
        });
      });
    }

    window.addEventListener('message', (event) => {

      if (!allowedOrigins.has(event.origin)) return;
      const data = event.data;
      if (!data || data.target !== 'cash-in-ui') return;
      if (data.type === 'ack' && data.echo?.type === 'handshake') {
        gameReady = true;
        console.log('[CashIn RPG] Handshake acknowledged by game');
      }
      console.log('[CashIn RPG] Payload from game:', data);
    });
  });
</script>

