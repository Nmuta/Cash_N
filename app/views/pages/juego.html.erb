  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const viceActions = {
        addiction: ['Call a supportive friend', 'Attend a recovery meeting'],
        betrayal: ['Offer a sincere apology', 'Rebuild trust with consistent honesty'],
        cruelty: ['Perform an unexpected kindness', 'Practice empathy in a difficult conversation'],
        deceit: ['Tell a hard truth today', 'Review personal commitments for honesty'],
        envy: ['List three personal strengths', 'Celebrate someone elseâ€™s success aloud'],
        gluttony: ['Choose a mindful, portioned meal', 'Drink a full glass of water before eating'],
        materialism: ['Donate an item you rarely use', 'Spend today without impulse purchases'],
        pride: ['Ask for feedback from someone you trust', 'Express gratitude to a teammate'],
        promiscuity: ['Set a boundary that protects intimacy', 'Invest time in a meaningful relationship'],
        sloth: ['Complete a 10-minute productive task', 'Take a brisk walk or stretch break'],
        vanity: ['Give a genuine compliment to another', 'Spend an hour offline from social media'],
        wrath: ['Take five deep breaths before reacting', 'Write down feelings before responding']
      };

      const actionWindow = document.getElementById('action-window');
      const viceButtons = document.querySelectorAll('.vice-button');

      const renderActions = (viceKey, viceLabel) => {
        const actions = viceActions[viceKey] || [];
        actionWindow.innerHTML = '';

        const header = document.createElement('div');
        header.className = 'action-header';
        header.textContent = `Resist ${viceLabel}`;
        actionWindow.appendChild(header);

        if (!actions.length) {
          const empty = document.createElement('div');
          empty.className = 'action-placeholder';
          empty.textContent = 'No actions configured yet.';
          actionWindow.appendChild(empty);
          return;
        }

        const list = document.createElement('div');
        list.className = 'action-list';

        actions.forEach((action, index) => {
          const actionId = `vice-action-${viceKey}-${index}`;
          const item = document.createElement('label');
          item.className = 'action-item';
          item.setAttribute('for', actionId);

          const checkbox = document.createElement('input');
          checkbox.type = 'checkbox';
          checkbox.id = actionId;
          checkbox.name = actionId;

          const text = document.createElement('span');
          text.textContent = action;

          item.appendChild(checkbox);
          item.appendChild(text);
          list.appendChild(item);
        });

        actionWindow.appendChild(list);
      };

      viceButtons.forEach((button) => {
        button.addEventListener('click', () => {
          const viceKey = button.dataset.viceName;
          const viceLabel = button.dataset.viceLabel || viceKey;
          renderActions(viceKey, viceLabel);
        });
      });
    });
  </script>
 
  
